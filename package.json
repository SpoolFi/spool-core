        "@types/lodash": "^4.14.181",
        "@types/mocha": "9.0.0",
        "@types/node": "16.11.11",
        "@types/seedrandom": "^3.0.2",
        "@uniswap/sdk-core": "^3.0.1",
        "@uniswap/smart-order-router": "^2.5.26",
